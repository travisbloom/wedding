{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2015", "dom"],
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
